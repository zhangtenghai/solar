<% content_for :page_title do %>
<%= render "title_bar" %>
<% end %>

<div class="row">
  <div class="col-md-12">
    <div class="portlet box">
      <div class="dataTables_wrapper form-inline" role="grid">
        <div class="row">
          <div class="col-md-12 col-sm-12">
            <%= form_tag users_path, :method => 'get' do %>
            <div class="dataTables_filter pull-left">
              <label>
                关键字:<%= text_field_tag :search, params[:search], :class => "form-control input-small" %>
              </label>
              <%= submit_tag '查询', :name => nil, :class => 'btn' %>
            </div>
            <% end %>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>公司</th>
                <th>名称</th>
                <th>工号</th>
                <th>级别</th>
                <th>邮箱</th>
                <th>角色</th>
                <th>在职</th>
                <th>状态</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% @users.each do |item| %>
                <tr>
                  <td><%= item.company.name if item.company %></td>
                  <td><%= item.name %></td>
                  <td><%= item.no %></td>
                  <td><%= item.level %></td>
                  <td><%= item.email %></td>
                  <td><%= item.role %></td>
                  <td><%= item.no_job ? '离职' : '在职' %></td>
                  <td><%= item.locked_at ? '禁用' : '启用' %></td>
                  <td>
                    <%= link_to '查看', edit_user_path(item) %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <%= paginate @users %>
        </div>
      </div>
    </div>
  </div>
</div>