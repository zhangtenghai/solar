
<!-- BEGIN LOGIN FORM -->
<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => "login-form" }) do |f| %>
  <h3 class="form-title">Solar</h3>
  <% unless flash[:alert].nil? %>
  <div class="alert alert-danger">
    <button class="close" data-dismiss="alert"></button>
    <span><%= flash[:alert] %></span>
  </div>
  <% end %>
  <div class="form-group">
    <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
    <label class="control-label visible-ie8 visible-ie9">账号</label>
    <div class="input-icon">
      <i class="fa fa-user"></i>
      <%= f.text_field :login, :class => "form-control placeholder-no-fix", placeholder: '账号' %>
    </div>
  </div>
  <div class="form-group">
    <label class="control-label visible-ie8 visible-ie9">密码</label>
    <div class="input-icon">
      <i class="fa fa-lock"></i>
      <%= f.password_field :password, :class => "form-control placeholder-no-fix", placeholder: '密码' %>
    </div>
  </div>
  <div class="form-actions">
    <button type="submit" class="btn green pull-right" >
    登陆 <i class="m-icon-swapright m-icon-white"></i>
    </button>
  </div>
  <div class="forget-password">
    <p>
      忘记密码或者创建账户,请联系管理员.
    </p>
  </div>
</form>
<% end %>
<!-- END LOGIN FORM -->

